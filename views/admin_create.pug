extends global.pug

block content
  link(rel="stylesheet", href="/styles/admin_create.css")

  div(id="main")
    form(action="/admin/createArticle", method="post")
      input(name="image", placeholder="Image URL", required)
      input(name="header", placeholder="Header", required)
      textarea(name="synopsis", placeholder="Synopsis", required)
      input(name="date", placeholder="Date", required)
      input(type="hidden", name="_csrf", value= csrfToken)
      button(type="submit") Post
